<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.theprogrammingturkey.hackohio2016.MainActivity">


    <TextView
        android:text="   Quantity:   "
        android:background="@drawable/shape"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView3"
        android:layout_alignBaseline="@+id/amount"
        android:layout_alignBottom="@+id/amount"
        android:layout_alignParentStart="true" />

    <Spinner

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="23dp"
        android:id="@+id/spinner2"
        android:entries="@array/accounts2_array"
        android:layout_below="@+id/spinner1"
        android:layout_alignParentStart="true"
        android:contextClickable="false" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spinner1"
        android:entries="@array/accounts_array"
        android:layout_marginTop="91dp"
        android:layout_below="@+id/textView8"
        android:layout_alignParentStart="true" />

    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Costumer:"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Brutus Buckeye"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="45dp"
        android:id="@+id/Cust_ID"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <Button

        android:text="Transfer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/transfer"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="71dp"
        android:layout_alignParentEnd="true" />

    <EditText
        android:background="@drawable/shape"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:layout_marginTop="27dp"
        android:id="@+id/amount"
        android:layout_below="@+id/spinner2"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
